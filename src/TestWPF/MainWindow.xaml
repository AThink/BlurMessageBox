<Window x:Class="TestWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="524.727" Width="689.062">
    <Grid>
        <Button x:Name="BtnShowMsg" Content="Show Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Margin="237,50,0,0" Height="46" Click="BtnShowMsg_Click"/>
        <Button x:Name="BtnLongTextMsg" Content="Show Long Text Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Margin="237,120,0,0" Height="46" Click="BtnLongTextMsg_Click"/>
        <Button x:Name="BtTestMsg" Content="Show Test Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Margin="237,185,0,0" Height="46" Click="BtTestMsg_Click"/>
        <RadioButton x:Name="RbtnPersian" Content="Persian" HorizontalAlignment="Left" Height="20" Margin="27,75,0,0" VerticalAlignment="Top" Width="92"  Checked="RbtnLanguage_Checked"/>
        <RadioButton x:Name="RbtnEnglish" Content="English" HorizontalAlignment="Left" Height="20" Margin="27,50,0,0" VerticalAlignment="Top" Width="92" IsChecked="True" Checked="RbtnLanguage_Checked"/>
    </Grid>
</Window>
